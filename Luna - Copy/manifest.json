{
  "manifest_version": 3,
  "name": "Luna - TEST DEVELOPMENT",
  "version": "2.0",
  "description": "Edge extension with a sidebar panel and a button.",
  "permissions": [
    "storage",  
    "sidePanel"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "action": {
    "default_title": "Open Luna sidebar",
    "default_icon": {
      "16": "icons/icon.png",
      "48": "icons/icon.png",
      "128": "icons/icon.png"
    }
  },
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "128": "icons/icon.png"
  },
  "side_panel": {
    "default_path": "html/mainpage.html"
  }
}